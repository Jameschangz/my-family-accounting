.container {
  padding: 20px;
  background-color: #f8f8f8;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.nickname {
  font-size: 18px;
  font-weight: bold;
}

button {
  width: 100%;
  padding: 10px;
  background-color: #ce93d8;
  color: white;
  border: none;
  border-radius: 5px;
}

button:active {
  background-color: #179b16;
}
