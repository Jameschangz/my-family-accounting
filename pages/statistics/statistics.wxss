.scroll-container {
  height: 100vh;
  background-color: #f3e5f5;
}

.container {
  padding: 20px;
}

.overview-section, .chart-section {
  background: white;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 20px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 15px;
  display: block;
}

.overview-content {
  display: flex;
  justify-content: space-between;
}

.overview-item {
  text-align: center;
  flex: 1;
}

.label {
  font-size: 14px;
  color: #666;
}

.amount {
  font-size: 18px;
  font-weight: bold;
  display: block;
  margin-top: 5px;
}

.income {
  color: #4caf50;
}

.expense {
  color: #f44336;
}

/* 分类统计样式 */
.category-list {
  margin-top: 10px;
}

.category-item {
  margin-bottom: 15px;
}

.category-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
}

.category-name {
  color: #666;
}

.category-amount {
  font-weight: bold;
}

.category-bar {
  height: 6px;
  background-color: #eee;
  border-radius: 3px;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  background-color: #ce93d8;
  border-radius: 3px;
  transition: width 0.3s ease;
}

/* 趋势统计样式 */
.trend-list {
  margin-top: 10px;
}

.trend-item {
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.trend-date {
  font-size: 14px;
  color: #666;
}

.trend-amounts {
  display: flex;
  justify-content: space-between;
  margin-top: 5px;
}

.trend-income {
  color: #4caf50;
}

.trend-expense {
  color: #f44336;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* 添加到现有样式中 */
.category-tabs {
  display: flex;
  margin-bottom: 15px;
  border-radius: 8px;
  overflow: hidden;
  background: #f5f5f5;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 8px 0;
  font-size: 14px;
  color: #666;
  transition: all 0.3s;
}

.tab.active {
  background-color: #ce93d8;
  color: white;
}

.bar-fill.income {
  background-color: #4caf50;
}

.bar-fill.expense {
  background-color: #f44336;
}

.percentage {
  font-size: 12px;
  color: #666;
  margin-top: 2px;
}

.category-item {
  background: #f9f9f9;
  padding: 10px;
  border-radius: 8px;
  margin-bottom: 10px;
}

.category-info {
  margin-bottom: 8px;
} 