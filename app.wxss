/* 全局样式 */
page {
  background-color: #f3e5f5;
  font-family: Arial, sans-serif;
}

.container {
  padding: 20px;
  background-color: #f3e5f5;
}

button {
  width: 100%;
  margin: 10px 0;
  padding: 10px;
  background-color: #ce93d8;
  color: white;
  border: none;
  border-radius: 5px;
}

button:active {
  background-color: #ba68c8;
}

.footer-nav {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #f3e5f5;
  padding: 10px 0;
}

.record-item {
  margin-bottom: 10px;
  padding: 10px;
  background-color: #ffffff;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}
